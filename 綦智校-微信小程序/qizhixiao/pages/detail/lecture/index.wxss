/* pages/detail/lecture/index.wxss */
.container {
  padding: 50rpx;
}

.header {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  align-items: center;
}

.header .title {
  font-size: 40rpx;
  font-weight: bold;
  height: 100rpx;
}

.header .subtitle {
  font-size: 30rpx;
  color: #555;
  height: 100rpx;

}

.info {
  height: 20rpx;
  font-size: 25rpx;
  color: #999;
}

.speaker-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 600rpx;
  height: 800rpx;
  border-radius: 50%;
}

.name {
  font-size: 26rpx;
  font-weight: bold;
  width: 100%;
  height: 50rpx;
}

.lecture-info {
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx solid #00ffaa;
}
.lecture-info text {
  height: 50rpx;
  font-size: 18rpx;
  margin: 5rpx 0;
}

.description {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 20rpx;
  align-items: center;
}

.description-title {
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.description-content {
  width: 80%;
  font-size: 20rpx;
  text-indent: 2em;
  text-align: justify; 
  line-height: 35rpx;
}