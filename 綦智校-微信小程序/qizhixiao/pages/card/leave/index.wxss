/* pages/card/leave/index.wxss */
.container {
  width: auto;
  border-top: 4rpx solid rgb(184, 184, 184);
}

.container .leave {
  width: auto;
  height: auto;
}

.leave .leave-item {
  width: auto;
  height: 100rpx;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  background-color: white;
  border-bottom: 1rpx solid rgb(231, 230, 230);
}

/* 自定义选择器 */
.category .picker {
  display: flex;
  align-items: center;
  margin-left: 200rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  padding: 10rpx;
  text-align: center;
}

.picker-arrow {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.picker-container {
  height: 110rpx;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.301);
  display: flex;
  justify-content: center;
  align-items: center
}
.picker-list {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
.picker-item {
  padding: 20rpx;
  border: 1rpx solid #eee;
}

/* 时间选择器 */
.beginDateTime , .endDateTime{
  justify-content: space-between; 
}
.dateTimeContainer {
  width: 380rpx;
}
.picker-DateTime {
  display: flex;
  float: left;
}
.picker-beginTime .picker-endTime{
  display: flex;
  float: right;
  margin-right: 20rpx;
}
.dateTimeContainer .DateTime{
  width: 220rpx;
  height: 60rpx;
  margin-right: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #e5e5e5;
  color: rgb(0, 0, 0); /* 提示文字的颜色 */
  background-color: #f0f0f0; /* 背景颜色 */
}
.dateTimeContainer .beginTime ,.dateTimeContainer .endTime {
  width: 120rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #e5e5e5;
  color: rgb(0, 0, 0); /* 提示文字的颜色 */
  background-color: #f0f0f0; /* 背景颜色 */
}
.dateTimeContainer .time-picker-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

/* 滑动样式 */
.switch-container {
  display: flex; /* 开启Flexbox布局 */
  flex: 1; /* 允许容器占据剩余空间 */
  align-items: center; /* 垂直居中 */
  justify-content: space-between; /* 两端对齐 */
}

.phone-container {
  height: 50rpx;
  display: flex;
}
.hidden-input {
  flex: 1;
  margin-left: 80rpx; /* 增加左边距 */
  height: 60rpx; /* 设置输入框高度 */
  line-height: 60rpx; /* 设置行高与输入框高度一致，使其垂直居中 */
  padding: 0 10rpx; /* 设置内边距 */
  outline: none; /* 去除焦点时的轮廓线 */
}

/* 请假附件 */

.reason-container {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}

.reason-text {
  position: relative;
  width: 100%;
  height: 280rpx;
  padding-left: 20rpx;
  display: flex;
  background-color: white;
  border-bottom: 1rpx solid rgb(231, 230, 230);
}
.reason-text text {
  width: 150rpx;
  margin-top: 20rpx;
}
.reason-textarea {
  width: 480rpx;
  height: 200rpx; /* 根据需要调整文本框的高度 */
  margin-top: 20rpx; /* 根据需要调整文本框与上方文本的间距 */
  margin-left: 80rpx; /* 根据需要调整文本框与上方文本的间距 */
  border: 1rpx solid #e5e5e5; /* 根据需要调整边框样式 */
  border-radius: 4rpx; /* 根据需要调整边框圆角 */
  line-height: 1.5; /* 根据需要调整行高 */
}
.count {
  position: absolute;
  right: 40rpx;
  bottom: 10rpx;
  color: #888; /* 字数显示的颜色 */
  font-size: 14px; /* 字数显示的字体大小 */
}
.upload-container {
  padding: 20rpx;
  width: 100%;
  height: 220rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-bottom: 1rpx solid rgb(231, 230, 230);
}
.upload-container .text {
  display: block;
  width: 150rpx;
  height: 40rpx;
}
.upload-container .imageContainer {
  display: flex;
  height: 100%;
  align-items: center;
}
.preview-container {
  position: relative; /* 为删除按钮定位 */
  display: flex;
  width: auto;
  height: auto;
  align-items: center;
  justify-content: center;
  background-color: white; /* 背景颜色 */
  border-radius: 10rpx; /* 圆角 */
  flex-wrap: wrap;
  gap: 30rpx; /* 图片之间的间距 */
}
.preview-image {
  width: 150rpx; /* 每张图片占行宽的20%，一行4张 */
  height: 150rpx; /* 高度自适应保持图片比例 */
}
.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: auto;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.delete-btn image {
  width: 30rpx;
  height: 25rpx;
  border-bottom-left-radius: 55rpx; /* 左下角为圆弧，半径为容器宽度的一半 */
}
.addImage {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%; /* 添加图片按钮占行宽的20% */
  height: 150rpx; /* 与图片预览高度保持一致 */
  margin-left: 20rpx;
  background-color: #f0f0f0; /* 背景颜色 */
  border: 1rpx solid #ccc; /* 边框 */
  border-radius: 10rpx; /* 圆角 */
  color: #888;
}
.addImage image {
  width: 80rpx;
  height: 80rpx;
}


.counsellor {
  width: auto;
  height: 60rpx;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  background-color: white;
  padding: 20rpx;
  margin-top: 20rpx;
  justify-content: space-between;
}
.counsellor-text {
  flex: 1;
  text-align: left;
}
.counsellor .picker {
  width: 70%;
  height: 100%;
  display: flex;
  align-items: center; 
}
.picker-counsellor {
  width: 150rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.picker-counsellor .image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}


.submit-button-container {
  width: 100%; /* 确保容器宽度填满父元素 */
  display: flex;
  justify-content: center; /* 水平居中 */
  padding: 20px 0; /* 添加一些上下内边距 */
}
.submit-button {
  width: 100%; /* 设置按钮宽度 */
  height: 50px; /* 设置按钮高度 */
  background-color: #7FFFD4; /* 设置按钮背景颜色 */
  color: rgb(0, 0, 0); /* 设置按钮文字颜色 */
  font-size: 16px; /* 设置按钮文字大小 */
  text-align: center; /* 使文字居中 */
  line-height: 50px; /* 使文字垂直居中 */
  border: none; /* 移除边框 */
  border-radius: 5px; /* 设置圆角 */
  box-sizing: border-box; /* 确保内边距和边框不会影响按钮的宽度 */
}