/* pages/card/grades/scores/index.wxss */
.container {
  width: auto;
  background-color: #f8f8f8;
}
.swiper {
  width: 100%; /* 根据需要设置宽度 */
  height: 120rpx; /* 根据需要设置高度 */
}

.swiper .wx-swiper-dot {
  background-color: rgba(148, 147, 147, 0.7); /* 未选中的指示点颜色 */
}
.swiper .wx-swiper-dot-active {
  background-color: #7FFFD4; /* 选中的指示点颜色 */
}
.swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  position: absolute;
  bottom: 5rpx; /* 调整指示点距离底部的距离 */
}
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.about {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.about text {
  flex: 0 0 calc(33% - 10px); /* 每个元素占据33%的宽度减去间距，以确保每行可以放3个元素 */
  max-width: calc(33% - 10px); /* 最大宽度限制，防止内容溢出 */
  padding: 10px; /* 内边距 */
  margin: 5px; /* 外边距，每行元素之间的间距 */
  background-color: #b4f1ddbe; /* 背景颜色 */
  border: 1px solid #dcdcdc; /* 边框颜色 */
  box-sizing: border-box; /* 边框和内边距包含在宽度内 */
  overflow: hidden; /* 超出部分隐藏 */
  white-space: nowrap; /* 文本不换行 */
  font-size: 28rpx;
}


.subjects {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start; /* 从左边开始排列 */
  padding: 5rpx; /* 容器内边距，为元素间的间距留出空间 */
}

.subject-item {
  display: flex;
  flex-direction: column; /* 子元素垂直排列 */
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
  width: 200rpx; /* 自定义宽度 */
  height: 120rpx; /* 自定义高度 */
  margin: 23rpx; /* 外边距，元素间的间距 */
  margin-bottom: 0;
  background-color: #8793d8be; /* 背景颜色 */
  box-sizing: border-box; /* 边框和内边距包含在宽度内 */
  overflow: hidden; /* 超出部分隐藏 */
}

.subject-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start; /* 从左边开始排列 */
}

.subject-name {
  width: auto;
  height: 70%; /* 第一个text占高度的80% */
  padding: 10rpx;
  padding-bottom: 0;
  display: flex;
  justify-content: center; /* 水平居中 */
  overflow: hidden; /* 隐藏溢出的内容 */
  text-overflow: ellipsis; /* 超出部分用省略号代替 */
}

.subject-score {
  height: 30%; /* 第二个text占高度的20% */
  display: flex;
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 100rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.detail-box {
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  width: 80%;
  max-width: 300px; /* 根据需要调整宽度 */
}
.detail-box text {
  display: block; /* 使每个text元素独占一行 */
  margin-bottom: 10px; /* 为每个text元素添加底部外边距 */
}