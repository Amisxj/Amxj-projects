/* pages/change/index.wxss */
.navbar {
  width: 100%;
  height: 100rpx;
}
.top {
  width: 100%;
  height: auto;
  background: #7FFFD4;
  align-items: center;
}

.find {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}
.findIn{
  width: 550rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content:space-between;
  padding:0 20rpx ;
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 35rpx;
}
.searchIcon {
  height: 45rpx;
  width: 60rpx;
}
.search {
  width: 480rpx;
}
.searchBtn {
  width: 120rpx;
  height: 55rpx;
  text-align: center;
  line-height: 55rpx;
  border-radius: 55rpx;
  background-color: #59dfb2;
  color: #ffffff;
  cursor: pointer;
}
.classify{
  height: 100rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 40rpx;
  margin-right: 40rpx;
  align-items: center;
}
.classify .category {
  width: 100rpx;
  height: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 50rpx;
  border-radius: 120rpx;
}
.categoryactive {
  width: 100rpx;
  height: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 50rpx;
  border-radius: 120rpx;
  background-color: #59dfb2;
  transform: scale(1.1); 
}
.goods {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.goods .card {
  width: 30%; 
  height: 100%;
  margin-bottom: 20rpx;
  margin: 10rpx 10rpx 20rpx 10rpx;
}

.card .img {
  width: 100%;
  height: 200rpx;
  overflow: hidden;
}
.card .img .image {
  width: 100%; /* 图片宽度填满卡片 */
  height: 100%; /* 图片高度自适应 */
  border-radius: 6%;
}

.card .discription {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center; 
  justify-content: space-between;
}
.discription .price, .title {
  line-height: 60rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
}
.discription .price {
  font-size: 30rpx;
  font-weight: 500;
}
.discription .title {
  font-size: 20rpx;
  color: rgb(153, 151, 151);
}