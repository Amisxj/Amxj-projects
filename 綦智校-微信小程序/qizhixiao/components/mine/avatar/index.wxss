/* components/mine/avatar/index.wxss */
/* 公共样式 */
.container {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  background: #a5ffe159;
}
.container .img {
  width: 160rpx;
  height: 160rpx;
  margin-left: 50rpx;
  background-color: rgba(107, 102, 102, 0.267);
  border: 1rpx solid rgb(238, 231, 231);
  border-radius: 50%;
  overflow: hidden;
}
.headshot {
  width: 100%;
  height: 100%;
}
/* 未登录样式 */
.container .touchpad {
  width: 460rpx;
  height: 200rpx;
  margin-left: 50rpx;
  display: flex;
  flex-direction: row;
}
.touchpad .information {
  width: 100%;
  height: 100%;
  display: flex;       
  flex-direction: column;   
}
.information .content {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.content .name {
  height: 75rpx;
  font-size: 50rpx;
  overflow: hidden;
}
.content .gender {
  width: 75rpx;
  height: 75rpx;
  margin-left: 30rpx; 
}
.information .number {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  overflow: hidden;
}
.icon {
  width: 100rpx;
  height: 200rpx;
  margin-left: 70rpx;
  display:flex;
  flex-direction:column;
  justify-content: center;
}
.next {
  width: 100%;
  height: 50%;
}
/* 未登录样式 */
.need {
  width: 420rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.need span {
  font-size: 60rpx;
  text-align: center;
}
.need .switch {
  width: 200rpx;
  font-size: 50rpx;
  text-align: center;
}


