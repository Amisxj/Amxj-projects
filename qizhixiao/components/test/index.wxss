/* components/test/index.wxss */
page{
  margin: 0;
	padding: 10rpx;
	box-sizing: border-box;
	font-size: 26rpx;
	background-color: #F8F8F8;
}

.card{
  padding: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.head{
  justify-content: space-between;
  margin: 10rpx 10rpx 10rpx 20rpx;
}

.showDate{
  margin: 10rpx 20rpx;
  font-weight: bold;
}

.opt{
  width: 60rpx;
  line-height: 50rpx;
  padding: 4rpx;
  margin: 0 10rpx;
  color: #fff;
  border-radius: 50rpx;
}

.line{
  display: flex;
  justify-content: space-around;
  align-content: center;
  margin: 30rpx 0;
}

.unitCon{
  color: #333;
}

.unitCon view{
  color: inherit;
}

.unit{
  line-height: 50rpx;
  width: 50rpx;
  margin: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.notCurMonth{
  color: #ddd !important;
}

.today > .u,.termStart > .u,.vacationStart > .u{
  color: #fff !important;
  border-radius: 30rpx;
  background: #1E9FFF;
}

.termStart > .u{
  background: #FF6347;
}

.vacationStart > .u{
  background: #3CB371;
}

.week{
  color:#9F8BEC;
}

.intro{
    font-size: 11px;
}

.curMonth > .cdetach{
  color: #999;
}

.weekend,.vacation{
  color: #3CB371;
}

.x-CenterCon {
	display: flex;
	justify-content: center;
}

.y-CenterCon {
	display: flex;
	align-items: center;
}

.a-full{
  flex: 1;
}

.arrow-left,.arrow-right{
  width: 25rpx;
  height: 25rpx;
  background-size: 25rpx 25rpx;
  background-repeat: no-repeat;

}

.arrow-left image,.arrow-right image{
  width: 100%;
  height: 100%;
}

.a-hr {
	display: block;
	height: 1rpx;
	background: #EEEEEE;
	border: none;
	margin: 10rpx 5rpx;
}

.a-dot {
	width: 18rpx;
	height: 18rpx;
	border-radius: 18rpx;
	background-color: #1E9FFF;
  margin-right: 15rpx; 
}

.a-dot + view{
  margin-right: 5rpx;
}

.info view{
  display: flex;
  align-items: center;
}