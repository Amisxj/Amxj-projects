/* components/search/index.wxss */
.container {
  width: 100%;
  height: auto;
}
.top {
  width: 100%;
  height: auto;
  display: flex;
  float: left;
  background: #7FFFD4;
}
.classify {
  width: 160rpx;
  height: 100%;
  line-height: 80rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}
.downIcon {
  width: 45rpx;
  height: 45rpx;
}
.find {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}
.findIn{
  width: 550rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content:space-between;
  padding:0 20rpx ;
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 35rpx;
}
.searchIcon {
  height: 45rpx;
  width: 60rpx;
}
.search {
  width: 480rpx;
}
.searchBtn {
  width: 120rpx;
  height: 55rpx;
  text-align: center;
  line-height: 55rpx;
  border-radius: 55rpx;
  background-color: #59dfb2;
  color: #ffffff;
  cursor: pointer;
}
.content {
  width: 100%;
  height: auto;
  display: flex;
  background: white;
}
.card {
  width: 25%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cicrle {
  width: 140rpx;
  height: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 50rpx;
}
.circleactive {
  width: 140rpx;
  height: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 50rpx;
  border-radius: 120rpx;
  background-color: #59dfb2 !important;
}
