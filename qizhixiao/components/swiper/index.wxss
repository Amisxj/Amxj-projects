/* components/swipe/index.wxss */
.cantainer {
  width: 100%;
  height: 100%;
}
.swiper-container {
  width: 100%;
  height: 400rpx;
}
.swiper-image {
  width: 100%;
  height: 100%;
}
.indicator {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 16rpx;
  display: flex;
  justify-content: center;
}
.dot {
  width: 30rpx;
  height: 6rpx;
  margin: 0 8rpx;
  border-radius: 6rpx;
  background-color: rgba(255, 255, 255, 0.4);
}
.active {
  background-color: #fff;
}
