/* components/mine/card/index.wxss */
.container {
  display: flex;
  width: 90%;
  margin-left: 5%;
  height: 200rpx;
  background: rgb(255, 250, 250);
  border-radius: 10rpx;
  box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.items {
  width: 150rpx;
  height: 180rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  text-align: center;
}
image {
  width: 100%;
  height: 130rpx;
  animation: myAnimation 1s ease-in-out infinite;
}
text {
  font-size: 30rpx;
}
