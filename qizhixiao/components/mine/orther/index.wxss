/* components/mine/orther/index.wxss */
.container {
  width: 100%;
  height: 100%;
  margin: 0;
}
.blanket {
  width: 100%;
  height: 200rpx;
  background: white;
}
.none {
  width: 100%;
  height: 50rpx;
}
p {
  display: block;
  width: 100%;
  height: 100rpx;
  border-radius: 20rpx 20rpx 0 0;
  text-align: center;
  color: rgba(120, 201, 174, 0.836);
  line-height: 100rpx;
  font-size: 30rpx;
  background: white;
  box-sizing: border-box;
  border:1px solid rgb(233, 231, 231);
  border-bottom: 1rpx solid rgb(206, 204, 204);
}
.item {
  width: 100%;
  height: 140rpx;
  background: white;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border:1px solid rgb(233, 231, 231);
  border-top: none;
  border-bottom: none;
}
.item :active {
  opacity: 0.9;
}
.img {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin-left: 5%;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
}
.menu {
  width: 70rpx;
  height: 70rpx;
}
.writting {
  display: block;
  width: 1000rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  overflow: hidden;
}
.icon {
  display: block;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-right: 20rpx;
}
.end {
  background-color: white;
  width: 100%;
  height: 20rpx;
  box-sizing: border-box;
  border:1px solid rgb(233, 231, 231);
  border-top: none;
  border-radius: 0 0 20rpx 20rpx;
}