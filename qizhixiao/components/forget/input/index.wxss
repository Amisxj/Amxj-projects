/* components/input/index.wxss */
.container{
  width: 100%;
  height: 100%;
  display: flex; 
  align-items:center;
  justify-content: center;
  margin-top: 10rpx;
}
.text{
  display: inline-block;
  width: 180rpx;
  height: 100rpx;
  margin-right: 10rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  border: 2rpx solid #dcdfe6;
  border-radius: 10rpx;
  background: #fff;
  text-align: justify;
  text-align-last: justify;
  line-height: 100rpx;
  letter-spacing: 3rpx;
  overflow: hidden;
}
.content{
  display: inline-block;
  width: 400rpx;
  height: 100rpx;
  box-sizing: border-box;
  border: 2rpx solid #dcdfe6;
  border-radius: 10rpx;
  background: #fff;
  overflow: hidden;
}
input{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  margin:10rpx 0;
  padding-left: 10rpx;
  overflow: hidden;
}