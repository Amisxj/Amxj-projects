/* pages/everyday/index.wxss */
page {
  background-color:#f3f3f3;
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  height: 100%; /* 确保父容器有足够的高度 */
}
.container {
  display:flex;
  flex-direction:column;
  width: 90%;
  height: 100%;
  border-radius: 50rpx;
  align-items: center;
  justify-content: center;
}
.content {
  width: 100%;
  height: 300rpx;
  line-height: 60rpx;
  margin-bottom: 150rpx;
}
.content .text {
  white-space: wrap;
  letter-spacing: 10rpx;
}
.content .author {
  position: absolute; 
  right: 20rpx; 
  font-size: 30rpx;
  color: rgb(173, 171, 171);
}
.blanket {
  display: flex;
  position: fixed;
  width: 60%;
  border: 1rpx solid rgb(182, 180, 180);
  bottom: 300rpx;
}
.operate {
  width: 60%;
  display: flex;
  position: fixed;
  bottom: 120rpx;
  justify-content: center;
}
.operate .small {
  width: 100rpx;
  height: 100rpx;
  padding: 100rpx;
  padding-bottom: 0;
  padding-top: 0;
}
.operate image {
  width: 60rpx;
  height: 60rpx;
}
.small {
  text-align: center;
  transition: transform 0.3s ease, filter 0.3s ease;
}
.liked {
  transform: scale(1.2); 
  filter: drop-shadow(0 0 5px red); 
}
/* button自带样式清除 */
.sharebutton {
  background-color: transparent !important;
  padding: 0 !important;
  line-height: inherit !important;
  margin: 0 !important;
  width: auto !important;
  font-weight: 500 !important;
  border-radius: none !important;
}
.sharebutton::after {
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
}
