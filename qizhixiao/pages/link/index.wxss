/* pages/link/index.wxss */
.container {
  width: 100%;
  height: 100%;
}

.movable-area {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

.pet {
  position: relative; 
  width: 100px; 
  height: 100px; 
}

.dialog {
  width: 200rpx;
  min-height: 40rpx; 
  max-height: 150rpx;
  background-color: #7FFFD4; 
  color: rgb(0, 0, 0); 
  padding: 10px;
  border-radius: 10px;
  max-width: 100%; 
  position: absolute; 
  bottom: 110%; 
  left: 50%; 
  transform: translateX(-50%); 
  white-space: pre-wrap; 
}

.dialog::after {
  content: '';
  position: absolute;
  bottom: -10px; 
  left: 50%; 
  transform: translateX(-50%); 
  width: 0;
  height: 0;
  border: 10px solid transparent; 
  border-top-color: #7FFFD4; 
  border-bottom: 0; 
}

.pet-image {
  position: absolute; 
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100%; 
  height: 100%;
}